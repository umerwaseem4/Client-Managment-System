<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee Managment Software</title>
  </head>
  <body>
    <!-- including header -->
    <%- include("partials/_header") %>
    <main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between">
          <a href="/add-user" class="border-shadow">
            <span class="text-gradient">New User</span>
            <i class="fas fa-user"></i>
          </a>
        </div>
        <form action="/" method="POST">
          <table class="table">
            <thead class="thread-dark">
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>@Email</th>
                <th>Gender</th>
                <th>Status</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <%- include("partials/_show") %>
            </tbody>
          </table>
        </form>
      </div>
    </main>
  </body>
</html>
